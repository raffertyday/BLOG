<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles/main.css">
 <script src="https://unpkg.com/axios/dist/axios.min.js"></script> 
</head>

<body>
  <div class="container">
    <h1>BlogTalk</h1>
    <a class="post-button" href="/new">New Post</a>
    <ul id="postsList">
      <% posts.forEach(post=> { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <small>
            <%=post.date %>
          </small>
          <p>
            <%=post.content%>
          </p>
          <small>By: <%=post.author%> </small>
          <form action="/edit/<%= post.id %>" method="patch">
         <button>Edit</button></form>
         <br />
         <form action="/api/posts/delete/<%= post.id %>" method="delete">
         <button>Delete</button></form>
        </li>
        <% }); %>
    </ul>
  </div>

</body>

</html>